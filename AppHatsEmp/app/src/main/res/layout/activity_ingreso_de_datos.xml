<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8D4F3"
    tools:context=".ingreso_de_datos">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Contenedor superior -->
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes"
                android:orientation="vertical"
                android:padding="15dp"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/textViewIngreso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingresa los siguientes datos para poder continuar"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <!-- Trabajo -->
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elige un Servicio"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/linearLayout"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:id="@+id/txtAreaTrabajoLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Seleccione una opción"
                app:layout_constraintTop_toBottomOf="@id/textView5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints">

                <AutoCompleteTextView
                    android:id="@+id/txtAreaTrabajo"
                    android:layout_width="match_parent"
                    android:layout_height="94dp"
                    android:inputType="none"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:ignore="SpeakableTextPresentCheck, TouchTargetSizeCheck"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Fecha de nacimiento -->
            <TextView
                android:id="@+id/textViewEdad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingresa tu fecha de nacimiento"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/txtAreaTrabajoLayout"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/txtFechaNacimiento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                android:inputType="number"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/textViewEdad"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Nombre de Perfil -->
            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingrese un nombre de Perfil"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/txtFechaNacimiento"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/txtNombrePerfil"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                android:inputType="text"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/textViewEmail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Número de teléfono -->
            <TextView
                android:id="@+id/textViewNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingresa tu número de telefono"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/txtNombrePerfil"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/txtNumeroTelefono"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                android:inputType="number"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/textViewNum"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Imágenes -->
            <ImageView
                android:id="@+id/imgPerfil"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_constraintTop_toBottomOf="@id/txtNumeroTelefono"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgDui"
                tools:srcCompat="@drawable/baseline_account_circle_24" />

            <ImageView
                android:id="@+id/imgDui"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgPerfil"
                app:layout_constraintTop_toBottomOf="@id/txtNumeroTelefono"
                tools:srcCompat="@drawable/baseline_person_pin_24" />

            <!-- Botones para las imágenes -->
            <Button
                android:id="@+id/btnTomarFoto"
                android:layout_width="157dp"
                android:layout_height="59dp"
                android:background="@drawable/boton"
                android:text="Toma una foto para el Perfil"
                app:layout_constraintEnd_toEndOf="@id/imgPerfil"
                app:layout_constraintStart_toStartOf="@id/imgPerfil"
                app:layout_constraintTop_toBottomOf="@id/imgPerfil" />

            <Button
                android:id="@+id/btnTomarFotoDui"
                android:layout_width="154dp"
                android:layout_height="53dp"
                android:background="@drawable/boton"
                android:text="Toma una foto de tu DUI"
                app:layout_constraintEnd_toEndOf="@id/imgDui"
                app:layout_constraintStart_toStartOf="@id/imgDui"
                app:layout_constraintTop_toBottomOf="@id/imgDui" />

            <!-- Botón para seleccionar PDF -->
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Ingresa tus antecedentes"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnTomarFoto" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/baseline_picture_as_pdf_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView9" />

            <Button
                android:id="@+id/btnPDF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/boton"
                android:text="Seleccionar PDF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView" />

            <TextView
                android:id="@+id/txtUrlPdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Documento PDF"
                android:textColor="@color/black"
                android:textSize="19sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnPDF" />

            <Button
                android:id="@+id/btnRegistrarse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/boton"
                android:text="Registrarse"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtUrlPdf" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
