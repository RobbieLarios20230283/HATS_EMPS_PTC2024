<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#D8D4F3"
    tools:context=".Register">

    <!-- ScrollView que permite desplazamiento vertical -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <!-- ConstraintLayout contenido -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="409dp"
                android:layout_height="244dp"
                android:background="@drawable/top_background"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="323dp"
                    android:layout_height="156dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    app:srcCompat="@drawable/hats_logo" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="HATS"
                    android:textColor="#8862AF"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Colocar el texto encima del campo de entrada de correo -->

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Ingresa tu correo Electrónico"
                android:textColor="#8862AF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.206"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Confirme la contraseña"
                android:textColor="#8862AF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.172"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtContraseñaReg" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Escriba su Nombre Completo"
                android:textColor="#8862AF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.208"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtConfirmarContraseña" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Escriba su Dirección"
                android:textColor="#8862AF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.174"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtNombreCompleto" />

            <TextView
                android:id="@+id/txtIngresarCon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Ingresa una contraseña segura"
                android:textColor="#8862AF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.222"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtCorreoRegistro" />

            <EditText
                android:id="@+id/txtCorreoRegistro"
                android:layout_width="320dp"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/txtviws"
                android:hint="..."
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColorHint="#CFB7E4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView2" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtContraseñaReg"
                android:layout_width="325dp"
                android:layout_height="62dp"
                android:background="@drawable/txtviws"
                android:inputType="textPassword"
                android:padding="5dp"
                app:endIconMode="password_toggle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtIngresarCon">

                <EditText
                    android:id="@+id/txtContraseñaRegistro"
                    android:layout_width="314dp"
                    android:layout_height="46dp"
                    android:background="@drawable/txtviws"
                    android:padding="10dp" />

            </com.google.android.material.textfield.TextInputLayout>


            <EditText
                android:id="@+id/txtConfirmarContraseña"
                android:layout_width="320dp"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/txtviws"
                android:hint="..."
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColorHint="#CFB7E4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView6" />

            <EditText
                android:id="@+id/txtNombreCompleto"
                android:layout_width="320dp"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/txtviws"
                android:hint="..."
                android:padding="10dp"
                android:textColorHint="#CFB7E4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView7" />

            <EditText
                android:id="@+id/txtDireccion"
                android:layout_width="320dp"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/txtviws"
                android:hint="..."
                android:padding="10dp"
                android:textColorHint="#CFB7E4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView8" />

            <Button
                android:id="@+id/btnSiguiente"
                android:layout_width="152dp"
                android:layout_height="47dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/boton"
                android:drawableEnd="@drawable/baseline_navigate_next_24dd"
                android:text="Siguiente"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtDireccion" />

            <Button
                android:id="@+id/btnRegresar"
                android:layout_width="65dp"
                android:layout_height="49dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/boton"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                app:icon="@drawable/retroceso"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.164"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnSiguiente" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
